{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "lib": ["ESNext"],
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "skipLibCheck": true,
  "include": ["**/**/*.ts"],
  "exclude": ["node_modules/*"],
  "noImplicitAny": false
}
